to random2 :min :max
ifelse and :min = int :min :max = int :max
 [output :min + random :max - :min + 1]
 [output :min + (:max - :min) * randf]
;output :min + random :max - :min + 1
end

to oneof :a :b
ifelse (random 100) < 50 [output :a][output :b]
end


