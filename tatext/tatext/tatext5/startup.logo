make "<scale> 1
make "<statestack> []
fillscreen 64 92
setcolor 0
setpensize 4
pendown
%setheading 0
showturtle
move-turtle
%dropfill
end

to move-turtle
%tsetxy :<txcor> - 20  :<tycor> - 20
;wait 0.1
end

